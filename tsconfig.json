{
  // This file is not used in compilation. It is here just for a nice editor experience.
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".", // 프로젝트 루트를 기준으로 경로 설정
    "outDir": "./dist", // 컴파일된 JS 파일이 저장될 디렉토리
    "rootDir": "./src", // TypeScript 소스 파일의 루트 디렉토리
    "sourceMap": true, // 디버깅을 위한 소스맵 생성
    "strict": true, // 엄격한 타입 검사
    "esModuleInterop": true, // CommonJS 및 ES 모듈 간 호환성 지원
    "skipLibCheck": true // 라이브러리 검사 비활성화 (속도 향상)
  },
  "include": ["src/**/*"], // 컴파일 대상 파일 지정
  "exclude": [".docusaurus", "build", "node_modules"] // 컴파일에서 제외할 디렉토리
}